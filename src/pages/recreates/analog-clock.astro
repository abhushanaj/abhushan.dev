---
import DefaultLayout from '@/layouts/default/index.astro';

import ClosingConnectCta from '@/components/astro/closing-connect-cta/index.astro';
import BreadcrumbJsonLdSchema from '@/components/astro/json-lds/breadcrumb.astro';
import SeoMeta from '@/components/astro/seo-meta/index.astro';
import { BackAction } from '@/components/react/back-action';
import AnalogClockImpl from '@/components/react/recreates/analog-clock/';
import RecreatesWrapper from '@/components/react/recreates/demo-wrapper';

import { getUriFromSlug } from '@/lib/url';
---

<DefaultLayout>
	<SeoMeta
		slot="head"
		title="Analog Clock | Recreates by Abhushan"
		description="Explore Abhushan's recreation of the analog clock, showcasing expertise in Frontend Development"
		ogImage="/open-graph/recreates/analog-clock-recreates.webp"
		ogImageAlt="Analog Clock recreates by Abhushan Adhikari Joshi"
	/>

	<BreadcrumbJsonLdSchema
		slot="breadcrumb-ld"
		breadcrumbTrial={[
			{
				name: 'Recreates',
				uri: getUriFromSlug('recreates')
			},
			{
				name: 'Analog Clock',
				uri: getUriFromSlug('recreates/analog-clock')
			}
		]}
	/>

	<main>
		<BackAction href={getUriFromSlug('recreates')} title="back to recreates">back to recreates</BackAction>

		<article class="w-full">
			<h1 class="mb-6 mt-2 text-2xl md:text-4xl">Analog Clock</h1>

			<section class="mb-8">
				<RecreatesWrapper>
					<AnalogClockImpl client:load />
				</RecreatesWrapper>
			</section>

			<!-- Reach out listing -->
			<section class="mb-8">
				<ClosingConnectCta />
			</section>
		</article>
	</main>
</DefaultLayout>
