---
type Props = {
	title: string;
	publishedDate: Date;
	views?: number;
};

const { title, publishedDate, views = 0 } = Astro.props;
const dateString = publishedDate.toDateString();
const dateIso = publishedDate.toISOString();
const formattedViews = views > 0 ? `${views} views` : null;
---

<header class="mb-6 mt-2 border-b-2 border-b-ui-seperator-neutral-lc pb-2">
	<h1 class="text-2xl md:text-3xl">{title}</h1>
	<p class="mt-1 flex flex-wrap justify-between gap-3 text-sm text-text-neutral-lc">
		<time datetime={dateIso}>{dateString}</time>
		{formattedViews && <span>{formattedViews}</span>}
	</p>
</header>
