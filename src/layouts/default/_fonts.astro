<!-- https://github.com/pixel-point/fontpie -->
<style is:global>
	/* ======== Mono Space fonts for code blocks ======= */
	/* Geist Mono Light */
	@font-face {
		font-family: 'Geist Mono';
		src: url('/fonts/GeistMono-Light.woff2') format('woff2');
		font-weight: 300;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Geist Mono Fallback';
		font-style: normal;
		font-weight: 300;
		src: local('Courier New');
		ascent-override: 92.01%;
		descent-override: 22%;
		line-gap-override: 10%;
		size-adjust: 99.98%;
	}

	/* Geist Mono Medium */
	@font-face {
		font-family: 'Geist Mono';
		src: url('/fonts/GeistMono-Medium.woff2') format('woff2');
		font-weight: 500;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Geist Mono Fallback';
		font-style: normal;
		font-weight: 500;
		src: local('Courier New');
		ascent-override: 92.01%;
		descent-override: 22%;
		line-gap-override: 10%;
		size-adjust: 99.98%;
	}

	:root {
		--font-light: 300;
		--font-regular: 400;
		--font-medium: 500;
		--font-semibold: 600;
		--font-bold: 700;

		/* --font-sans: 'Geist';
		--font-sans-fallback: 'Geist Fallback'; */

		--font-mono: 'Geist Mono';
		--font-mono-fallback: 'Geist Mono Fallback';
	}

	html,
	body {
		/* font-family: var(--font-sans), var(--font-sans-fallback); */
		font-weight: var(--font-regular);
	}

	h1,
	h2,
	h3 {
		font-weight: var(--font-bold);
	}

	h4,
	h5,
	h6 {
		font-weight: var(--font-medium);
	}
</style>
