---
import ThemeToogle from '@/components/astro/theme-toggle/index.astro';
import { NavLink } from '@/components/react/link/navigation';

import { getUrlFromUri } from '@/lib/url';

const currentPath = Astro.url.pathname;

const navLinks = [
	{
		href: getUrlFromUri('/'),
		name: 'home',
		title: "Visit Abhushan's home page",
		active: currentPath === '/'
	},
	{
		href: getUrlFromUri('/blog'),
		name: 'blog',
		title: "Visit Abhushan's blog page",
		active: currentPath.includes('/blog')
	}
];
---

<header class="mx-auto max-w-page-content-width">
	<nav class="flex h-navbar w-full max-w-primary-content-width items-center justify-between gap-4">
		<ul class="flex items-center gap-4">
			{
				navLinks.map((navLink) => (
					<li>
						<NavLink href={navLink.href} title={navLink.title} active={navLink.active}>
							{navLink.name}
						</NavLink>
					</li>
				))
			}
		</ul>

		<ThemeToogle />
	</nav>
</header>
