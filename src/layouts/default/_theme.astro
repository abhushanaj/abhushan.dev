<style is:global>
	:root {
		--gray-1: #fcfcfc;
		--gray-2: #f9f9f9;
		--gray-3: #f0f0f0;
		--gray-4: #e8e8e8;
		--gray-5: #e0e0e0;
		--gray-6: #d9d9d9;
		--gray-7: #cecece;
		--gray-8: #bbbbbb;
		--gray-9: #8d8d8d;
		--gray-10: #838383;
		--gray-11: #646464;
		--gray-12: #202020;

		--solid-white: #fff;
		--solid-black: #000;

		--blue-1: #fbfdff;
		--blue-2: #f4faff;
		--blue-3: #e6f4fe;
		--blue-4: #d5efff;
		--blue-5: #c2e5ff;
		--blue-6: #acd8fc;
		--blue-7: #8ec8f6;
		--blue-8: #5eb1ef;
		--blue-9: #0090ff;
		--blue-10: #0588f0;
		--blue-11: #0d74ce;
		--blue-12: #113264;

		/* ===== Pallete Composition ====== */

		/* App Background */
		--app-bg: var(--solid-white);

		/* Text */
		--text-neutral-hc: var(--gray-12);
		--text-neutral-lc: var(--gray-11);

		/* Seperators/Borders */
		--ui-seperator-neutral-lc: var(--gray-6);
		--ui-seperator-neutral-hc: var(--gray-7);

		/* UI */
		--ui-neutral-bg: var(--gray-3);
		--ui-neutral-hovered-bg: var(--gray-4);
		--ui-neutral-active-bg: var(--gray-5);
		--ui-neutral-focus-ring: var(--gray-7);
		--ui-neutral-border: var(--gray-7);
		--ui-neutral-hovered-border: var(--gray-8);

		/* Informational Palete */
		--text-info-hc: var(--blue-12);
		--text-info-lc: var(--blue-11);

		--ui-seperator-info-lc: var(--blue-6);
		--ui-seperator-info-hc: var(--blue-7);

		--ui-info-bg: var(--blue-3);
		--ui-info-hovered-bg: var(--blue-4);
		--ui-info-active-bg: var(--blue-5);
		--ui-info-focus-ring: var(--blue-7);
		--ui-info-border: var(--blue-7);
		--ui-info-hovered-border: var(--blue-8);
	}

	[data-theme='dark'] {
		--gray-1: #111111;
		--gray-2: #191919;
		--gray-3: #222222;
		--gray-4: #2a2a2a;
		--gray-5: #313131;
		--gray-6: #3a3a3a;
		--gray-7: #484848;
		--gray-8: #606060;
		--gray-9: #6e6e6e;
		--gray-10: #7b7b7b;
		--gray-11: #b4b4b4;
		--gray-12: #eeeeee;

		--app-bg: var(--gray-1);

		--blue-1: #0d1520;
		--blue-2: #111927;
		--blue-3: #0d2847;
		--blue-4: #003362;
		--blue-5: #004074;
		--blue-6: #104d87;
		--blue-7: #205d9e;
		--blue-8: #2870bd;
		--blue-9: #0090ff;
		--blue-10: #3b9eff;
		--blue-11: #70b8ff;
		--blue-12: #c2e6ff;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		background-color: var(--app-bg);
		color: var(--text-neutral-lc);
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		color: var(--text-neutral-hc);
	}

	span,
	a {
		color: currentColor;
		outline: none;
	}

	::selection {
		background-color: var(--ui-neutral-active-bg);
		color: var(--text-neutral-hc);
	}
</style>

<script is:inline>
	try {
		const theme = localStorage.getItem('theme') || 'light';
		const htmlDoc = document.documentElement;

		const currTheme = htmlDoc.getAttribute('data-theme');

		if (!currTheme || currTheme !== theme) {
			/**
			 * TODO: Change this later to use actual theme and not just force to be light at all times
			 */
			htmlDoc.setAttribute('data-theme', 'light');
		}
	} catch (error) {
		console.error('Error setting initial theme', error);
	}
</script>
